#include <iostream> 
using namespace std; 
 
void pyramid(int n) 
{ 
  // The execution of outer loop 
  
  for (int i=0; i<n; i++) 
  { 
    // inner for loop will handle number of columns and their values changes accordingly to outer for loop 
    
    for(int j=0; j<=i; j++ ) 
    { 
      // print star 
      cout << "* "; 
    } 
     
    cout << endl; 
  } 
}

int main() 
{ 
  int n; 
  cout << "Number of Rows Wanted Can Be Entered: ";
  cin >> n;
  pyp(n); 
  return 0; 
} 
